package components

import "doppler/internal/models"

templ ListPosts(posts []models.Post) {
	<div class="p-8">
		for _, post := range posts {
			<div class="card lg:card-side bg-base-100 m-4 p-4">
				<div class="card-body">
					<h2 class="card-title">
						{ post.Title }
					</h2>
					<h3>created by { post.User }</h3>
					<h3>created on { post.Created.String() }</h3>
					<p>
						{ post.Content }
					</p>
				</div>
			</div>
		}
	</div>
}
